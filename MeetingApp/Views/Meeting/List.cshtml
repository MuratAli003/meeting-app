@model List<UserInfo>
@{
    ViewBag.Tittle = "Katılımcılar";
}

<main class="text-center">
    <h1 class="h4">Toplantıya katılım Listesi</h1>

    <table class="table table-border">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Soyad</td>
                <td>Katılım Durumu</td>
                <td>Detay</td>
            </tr>
        </thead>
        <tbody>
            @{int count = 0;}
            @foreach(var user in Model){
                
                @if(@user.WillAttend == true){
                    count++;
                    <tr class = "table-success">
                        <td>@user.Name</td>
                        <td>@user.Surname</td>
                        <td>Evet</td>
                        <td><a class= "btn btn-sm btn-primary" href="/meeting/Details/@user.Id">Detay</a></td>
                    </tr>
                }else{
                    <tr class = "table-danger">
                        <td>@user.Name</td>
                        <td>@user.Surname</td>
                        <td>Hayır</td>
                        <td><a class= "btn btn-sm btn-primary" href="/meeting/Details/@user.Id">Detay</a></td>
                    </tr>
                }      
            }
            
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <p>Katılımcı Sayısı : @count</p>
        </div>
    </div>
</main>
