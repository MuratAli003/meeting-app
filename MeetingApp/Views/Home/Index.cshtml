@model MeetingInfo
@{
    ViewBag.Tittle = "Home";
}
<main class = "text-center">
    <h1 class = "h4">@ViewBag.Selamlama , @ViewBag.Ad</h1>
    <p> Toplantı katılım durumunu belirtiniz</p>
    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Yer : @Model.Location</li>
            <li class="list-group-item">Tarih : @Model.Date.ToString("dd/MM/yyyy HH:mm:ss")
            </li>
            <li class="list-group-item">Mevcut Kişi Sayısı : @Model.NumberOfPeople</li>
        </ul>
    </div>

    <a class = "btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply"> Başvuru Yap</a>
</main>
